rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth.uid in get(/databases/$(database)/documents/groups/admin).data.members;
    }
    function isManager() {
      return request.auth.uid in get(/databases/$(database)/documents/groups/manager).data.members;
    }
    match /service/status {
      allow write: if isAdmin();
      allow read: if true;
    }
    match /service/conf {
      allow write: if isAdmin();
      allow read: if true;
    }
    match /groups/{document=**} {
      allow write: if isManager();
      allow read: if request.auth.uid != null;
    }
    match /groups/{groupId}/messages/{messageId} {
      allow read, write: if request.auth.uid != null;
    }
    match /accounts/{accountId} {
      allow read, write: if (request.auth.uid == accountId) || isManager() || isAdmin();
    }
    match /users/{userId} {
      allow write: if (request.auth.uid == userId) || isManager() || isAdmin();
      allow read: if request.auth.uid != null;
    }
    match /profiles/{userId} {
      allow read, write: if (request.auth.uid == userId) || isManager();
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
