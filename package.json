{
  "name": "tamuro.api",
  "version": "0.2.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "mongo-start": "mongod --fork --dbpath tmp/db --logpath tmp/db/mongod.log",
    "mongo-stop": "mongo admin --eval \"db.shutdownServer();\"",
    "mongo-clean": "mongo tamuro_api --eval \"db.users.remove({}); db.groups.remove({}); db.prims.remove({}); db.creds.remove({}); db.sessions.remove({}); db.logs.remove({});\"",
    "forever-start": "forever start --uid \"tamuro.api.test\" lib",
    "forever-stop": "forever stop \"tamuro.api.test\"",
    "build": "babel src --out-dir lib --ignore *.test.js --source-maps",
    "test": "npm run build; npm run mongo-start; jest --coverage; npm run mongo-stop",
    "start": "npm run build; npm run mongo-start; npm run forever-start",
    "stop": "npm run forever-stop; npm run mongo-stop"
  },
  "author": "Michinobu Maeda",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "cookie": "^0.3.1",
    "eslint": "^4.2.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  },
  "dependencies": {
    "bunyan": "^1.8.10",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "mongodb": "^2.2.30",
    "shortid": "^2.2.8"
  }
}
