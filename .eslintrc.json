{
    "env": {
        "es6": true,
        "browser": false,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "rules": {
        "indent": [ "error", 2 ],
        "quotes": [ "error", "single" ],
        "linebreak-style": [ "error", "unix" ],
        "semi": [ "error", "never" ],
        "eqeqeq": [ "error", "smart" ],
        "array-callback-return": [ "error" ],
        "block-scoped-var": [ "error" ],
        "complexity": ["error", 10],
        "curly": "error",
        "default-case": "error",
        "dot-location": [ "error", "property" ],
        "no-alert": [ "error" ],
        "no-caller": [ "error" ],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-div-regex": [ "error" ],
        "no-empty-function": [ "error" ],
        "no-eq-null": [ "error" ],
        "no-eval": [ "error" ],
        "no-extend-native": [ "error" ],
        "no-extra-label": [ "error" ],
        "no-floating-decimal": [ "error" ],
        "no-return-await": [ "error" ],
        "radix": [ "error" ],
        "require-await": [ "error" ]
    }
}
