{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "ignore": [
      "tests/**"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/updateServiceVersion",
        "function": "api"
      },
      {
        "source": "/invitation/*",
        "function": "api"
      }
    ],
		"headers": [
			{
				"source": "/",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "/index.html",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "/service-worker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			},
			{
				"source": "/registerServiceWorker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    },
    "auth": {
      "port": "9099"
    },
    "functions": {
      "port": "5001"
    },
    "database": {
      "port": "9000"
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
